<% layout('layouts/bolierplate') %>

    <div class="row mt-3">
        <div class="col-8 offset-2">
            <br /><br />
            <h3>Create a New Listing</h3>
            <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" placeholder="Give a catchy title" type="text" class="form-control"
                        required />
                    <div class="valid-feedback">Title Looks Good!</div>
                    <div class="invalid-feedback">Title should be valid!</div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" class="form-control" required></textarea>
                    <div class="valid-feedback">Description Looks Good!</div>
                    <div class="invalid-feedback">Description should be valid!</div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Upload Image</label>
                    <input name="listing[image][url]" type="file" class="form-control" required />
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" placeholder="1000" type="number" class="form-control" required />
                        <div class="valid-feedback">Price Looks Good!</div>
                        <div class="invalid-feedback">Price should be valid!</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input name="listing[country]" placeholder="India" type="text" class="form-control" required />
                        <div class="valid-feedback">Country name Looks Good!</div>
                        <div class="invalid-feedback">Country name should be valid!</div>
                    </div>
                </div>


                <div class="mb-3 col-md-4">
                    <label for="location" class="form-label">Location</label>
                    <input name="listing[location]" placeholder="Bikaner, Rajasthan" type="text" class="form-control"
                        required />
                    <div class="valid-feedback">Location Looks Good!</div>
                    <div class="invalid-feedback">Location name should be valid!</div>
                </div>

                <button class="btn btn-dark add-btn mt-3">Add</button>

            </form>
        </div>
    </div>